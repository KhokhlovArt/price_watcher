<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mainColor_1"
    android:padding="11dp"
    android:layout_margin="5dp"
    android:id="@+id/item_card"
    >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Апогон Каудерна тюлевый Pterapogon kauderni"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/description"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="24.11.2017 08:55"
            android:minWidth="120dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/colorPrimary"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/description"
            android:id="@+id/date"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="1400.0"
            android:minWidth="120dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/description"
            android:gravity="right"
            android:id="@+id/cost"
            />
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:paddingTop="6dp"
            android:stretchColumns="1"
            android:id="@+id/tableLayout">
            <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                tools:text="pleer.ru"
                android:maxWidth="250dp"
                android:gravity="center_horizontal|center_vertical"
                android:id="@+id/shop"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                tools:text="В наличии"
                style="@style/item_in_table"
                android:gravity="left|center_vertical"
                android:id="@+id/isHave"
                />
            </TableRow>
        </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="2dp"
        android:background="@color/black"
        android:layout_alignStart="@+id/description"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
    </LinearLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_delete_red_24dp"
        android:layout_below="@+id/tableLayout"
        android:layout_marginTop="-10dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:id="@+id/btn_del"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_brightness_1_grean_24dp"
        android:layout_marginTop="-10dp"
        android:layout_below="@+id/tableLayout"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:id="@+id/light_img"/>


</RelativeLayout>



